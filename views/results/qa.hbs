{{#if project}}
<h2 class="project-header">{{project.projectname}}</h2>
<h4>{{project.projecttype}}</h4>
<div class="card-columns">
    <div class="card project-details border-dark">
        <h5 class="card-header">Settings</h5>
        <div class="card-body">
            <div class="card-text">
                <ul class="list-group list-group-flush">
                    {{#each project.settings}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{@key}}
                        <span>{{this}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="card project-details border-dark">
        <h5 class="card-header">Uploaded Files</h5>
        <div class="card-body">
            <div class="card-text">
                <ul class="list-group list-group-flush" id="fileList">
                    {{#each project.files}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<p>
    Status: {{project.status}}
    <button class="btn btn-sm btn-dark" id="getResultsButton" {{#if project.logfiles}}{{else}}disabled{{/if}}>Show Results</button>
</p>

{{#if project.logfiles}} {{!-- Put PDF viewer code here as it does only exist if --}}
<div id="results">

</div>

<div class="card-deck">
    {{#if project.logfiles.[1]}}
    <div class="card project-details border-dark logfile" style="border-radius: 2px !important">
        <h5 class="card-header">Logfile</h5>
        <div class="card-body">
            <div class="card-text">
                {{{html project.logfiles.[1]}}}
            </div>
        </div>
    </div>{{/if}} {{#if project.logfiles.[0]}}
    <div class="card project-details border-dark errorfile">
        <h5 class="card-header">Errors</h5>
        <div class="card-body">
            <div class="card-text">
                {{{html project.logfiles.[0]}}}
            </div>
        </div>
    </div> {{/if}}
</div> 
<!-- (HandleBars) Save projects JSON data in the browsers window object -->
<script>window.Report = {{{json project}}}</script>
<script defer src="/js/Chart.bundle.min.js"></script>
<script defer src="/js/Chart.BoxPlot.min.js"></script>
<script defer src="/js/results/qa.js"></script>

{{/if}} {{else}}
<p>No project with this ID found!</p>
 {{/if}}
