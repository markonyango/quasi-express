<h2 class="project-title">{{project.projectname}}</h2>
<h4>{{project.projecttype}}</h4>

<div class="project-details-deck">
    <div class="project-details border-dark">
        <div class="card-header">Settings</div>
        <div class="card-body">
            <ul class="list-group">
                {{#each project.settings}}
                <li class="list-group-item">
                    {{@key}}
                    <span>{{this}}</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="project-details border-dark">
        <div class="card-header">Uploaded Files</div>
        <div class="card-body">
            <ul class="list-group" id="fileList">
                {{#each project.files}}
                <li class="list-group-item">
                    {{this}}
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<p>
    Status: {{project.status}}
    <button class="btn btn-sm btn-dark" id="getResultsButton" {{#if project.logfiles}}{{else}}disabled{{/if}}>Show Results</button>
</p>

{{#if project.logfiles}} {{!-- Put PDF viewer code here as it does only exist if --}}
<div id="results">

</div>

{{#if project.logfiles.[1]}}
<div class="project-details logfile">
    <div class="card-header">Logfile</div>
    <div class="card-body">
        {{{html project.logfiles.[1]}}}
    </div>
</div>{{/if}} {{#if project.logfiles.[0]}}
<div class="project-details errorfile">
    <div class="card-header">Errors</div>
    <div class="card-body">
        {{{html project.logfiles.[0]}}}
    </div>
</div> {{/if}}

<!-- (HandleBars) Save projects JSON data in the browsers window object -->
<script>window.Report = {{{ json project }}}</script>
<script defer src="/js/Chart.bundle.min.js"></script>
<script defer src="/js/Chart.BoxPlot.min.js"></script>
<script defer src="/js/results/qa.js"></script> {{/if}}