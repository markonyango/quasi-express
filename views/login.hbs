<form method="POST" action="/users/login" style="max-width: 500px" class="mx-auto">
    <div class="form-group row">
        <label class="d-none d-sm-block col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" placeholder="Username..." name="email">
        </div>
    </div>
    <div class="form-group row">
        <label class="d-none d-sm-block col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input class="form-control" type="password" placeholder="Password..." name="password">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 col-xs-12 offset-sm-2">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

    </div>
</form>