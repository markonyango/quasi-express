{{#if projects}}
<div class="table-responsive-sm">
    <table class="table table-hover table-sm table-light">
        <thead class='thead-dark'>
            <th>Project Name</th>
            <th name="projecttype">Project Type</th>
            <th name="settings">Settings</th>
            <th name="files">Files</th>
            <th name="created_at">Created at</th>
            <th name="status">Status</th>
        </thead>
        {{#each projects}}
        <tr>
            <td>
                <i class="fas fa-plus-square" data-toggle="collapse" data-target="#{{this._id}}" class="clickable"></i>
                <a href="/projects/{{_id}}" class="ml-2">{{this.projectname}}</a>
            </td>
            <td name="projecttype">{{this.projecttype}}</td>
            <td name="settings">{{this.settings}}</td>
            <td name="files">{{this.files}}</td>
            <td name="created_at">{{formatDatum this.created}}</td>
            <td name="status">{{status this.status this._id}}</td>
        </tr>
        <tr>
            <td colspan="6" class="pt-0 pb-0">
                <div class="collapse" id="{{this._id}}">
                    <ul class="list-unstyled small mt-2 ml-2 mb-2">
                        <li>Project Type: {{this.projecttype}}</li>
                        <li>Status: {{this.status}}</li>
                        <li>Proccess ID: {{this.pid}}</li>
                        <li>Settings: {{this.settings}}</li>
                        <li>Files: {{this.files}}</li>
                        <li>Created at: {{formatDatum this.created}}</li>
                    </ul>
                </div>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{/if}}

<p>&nbsp;</p>
<button type="button" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#exampleModal">Add Project</button>




<!-- Modal -->
